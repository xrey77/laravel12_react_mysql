    "components": {
        "schemas": {
            "Product": {
                "title": "Product",
                "description": "Product model schema",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "category": {
                        "type": "string",
                        "example": "Electronics"
                    },
                    "descriptions": {
                        "type": "string",
                        "example": "Gaming Laptop"
                    },
                    "qty": {
                        "type": "integer",
                        "example": 10
                    },
                    "unit": {
                        "type": "string",
                        "example": "pcs"
                    },
                    "costprice": {
                        "type": "number",
                        "format": "float",
                        "example": 800
                    },
                    "sellprice": {
                        "type": "number",
                        "format": "float",
                        "example": 1000
                    },
                    "saleprice": {
                        "type": "number",
                        "format": "float",
                        "example": 950
                    },
                    "productpicture": {
                        "type": "string",
                        "example": "laptop.jpg"
                    },
                    "alertstocks": {
                        "type": "integer",
                        "example": 5
                    },
                    "criticalstocks": {
                        "type": "integer",
                        "example": 2
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "apiKey",
                "description": "Enter token in format (Bearer <token>)",
                "name": "Authorization",
                "in": "header"
            }
        }
